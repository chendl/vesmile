<?xml version="1.0" encoding="UTF-8"?><beans xmlns="http://www.springframework.org/schema/beans"	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">	<!-- Servers -->	<bean name="serverLocator" class="com.vesmile.webappla.server.ServerLocator">		<property name="userServer" ref="userServer" />		<property name="baseServer" ref="baseServer" />	</bean>		<bean name="baseServer" class="com.vesmile.webappla.server.impl.LaBaseServerImpl">		<property name="daoFacade" ref="daoFacade" />		<property name="baseDao" ref="baseDao" />	</bean>		<bean name="userServer" class="com.vesmile.webappla.server.impl.UserServerImpl" parent="baseServer">	</bean>	</beans>