<?xml version="1.0" encoding="UTF-8"?><beans xmlns="http://www.springframework.org/schema/beans"	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">	<bean name="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">	    <property name="jndiName">	      <value>java:comp/env/jdbc/vesmile/demo</value>	    </property>	</bean>		<!-- Hibernate3 -->	<bean name="hibernateSupport" class="com.vesmile.framework.dao.H3Support">		<property name="sessionFactory" ref="sessionFactory" />	</bean>		<bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">    	<property name="dataSource" ref="dataSource" />	    <property name="hibernateProperties">	      <props>	        <prop key="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</prop>	        <prop key="hibernate.show_sql">false</prop>	        <prop key="hibernate.format_sql">false</prop>	        <prop key="hibernate.use_sql_comments">false</prop>	        <prop key="hibernate.max_fetch_depth">2</prop>	        <prop key="hibernate.default_batch_fetch_size">3</prop>	        <prop key="hibernate.order_updates">true</prop>	        <prop key="hibernate.transaction.flush_before_completion">true</prop>	        <prop key="hibernate.bytecode.use_reflection_optimizer">true</prop>	      </props>	    </property>	    <property name="mappingResources">	      <list>	      </list>	    </property>  	</bean>  	  	<!-- JDBC -->  	<bean name="jdbcSupport" class="com.vesmile.framework.dao.JdbcSupport">		<property name="dataSource" ref="dataSource" />	</bean>		<!-- Ibatis -->	<bean name="ibatisSupport" class="com.vesmile.framework.dao.IBatisSupport">		<property name="sqlMapClient" ref="sqlMapClient" />	</bean>		<bean id="sqlMapClient" class="com.vesmile.framework.util.WrapSqlMapClientFactoryBean">	    <property name="dataSource" ref="dataSource" />	    <property name="configLocation">	      <value>sql-map-config.xml</value>	    </property>	</bean></beans>